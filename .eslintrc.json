{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "react/prop-types": "off",
        "semi":"warn",
        "quotes": ["error", "single", {"avoidEscape": true, "allowTemplateLiterals": true}],
        "prettier/prettier": ["error", {
            "singleQuote": true,
            "endOfLine": "auto",
            "tabWidth": 2,
            "printWidth": 100
            }
        ]
    }
}